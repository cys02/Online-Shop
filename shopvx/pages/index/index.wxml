  <swiper-item class="swiper-item">
    <image class="swiper-img" mode="aspectFill" src="/swiper/biao.jpg"></image> 
  </swiper-item>
  <swiper-item class="swiper-item">
    <image class="swiper-img" mode="aspectFill" src="/swiper/bao.jpg"></image> 
  </swiper-item>
  <swiper-item class="swiper-item">
    <image class="swiper-img" mode="aspectFill" src="/swiper/xie.jpg"></image> 
  </swiper-item>
