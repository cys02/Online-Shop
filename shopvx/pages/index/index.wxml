    <image mode="aspectFill" style="width: 98%;margin: 3px; " src="/swiper/zhubao.jpg"></image> 
    <view class="down-sp">
      <view catchtap="detail" data-item="{{item}}" class="down-item" wx:for="{{zb}}" wx:key="item"><image mode="aspectFit" style="width: 97%;margin: 3px; " src="{{api}}{{item.logo}}"></image>
        <view style="font-weight: bold;">{{item.product}}</view>
        <view>￥{{item.price}}</view>
      </view>
    </view>
  </view>
